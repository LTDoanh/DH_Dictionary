<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.DictionaryController">
  <HBox layoutX="31.2" prefHeight="40.0" prefWidth="739.0" AnchorPane.bottomAnchor="530.0"
    AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
    <children>
      <ImageView fitHeight="40.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true">
        <image>
          <Image url="@../media/image/logo_full.png"/>
        </image>
        <HBox.margin>
          <Insets right="20.0"/>
        </HBox.margin>
      </ImageView>
      <Button fx:id="changeWordSceneButton" mnemonicParsing="false"
        onAction="#handleChangeParaScene" prefHeight="40.0" prefWidth="100.0" text="Dictionary">
        <font>
          <Font size="16.0"/>
        </font>
      </Button>
      <Button fx:id="changeParaSceneButton" layoutX="137.0" layoutY="10.0" mnemonicParsing="false"
        onAction="#handleChangeParaScene" prefHeight="40.0" prefWidth="100.0" text="Translate">
        <font>
          <Font size="16.0"/>
        </font>
      </Button>
      <Button layoutX="237.0" layoutY="10.0" mnemonicParsing="false" prefHeight="40.0"
        prefWidth="100.0" text="Challenge">
        <font>
          <Font size="16.0"/>
        </font>
      </Button>
    </children>
  </HBox>
  <VBox layoutY="100.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0"
    AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="100.0">
    <children>
      <HBox alignment="CENTER">
        <TextField fx:id="txtKeyword" prefHeight="26.0" prefWidth="561.0" promptText="Search">
          <opaqueInsets>
            <Insets/>
          </opaqueInsets>
          <HBox.margin>
            <Insets right="10.0"/>
          </HBox.margin>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </padding>
          <font>
            <Font size="14.0"/>
          </font>
        </TextField>
        <ComboBox fx:id="cbLanguage" prefHeight="26.0" prefWidth="170.0">
          <HBox.margin>
            <Insets/>
          </HBox.margin>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
          </padding>
        </ComboBox>
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
      </HBox>
      <HBox prefHeight="430.0" prefWidth="739.0">
        <children>
          <ListView fx:id="lvWords" prefHeight="200.0" prefWidth="200.0"/>
          <AnchorPane>
            <children>
              <TextArea fx:id="taMeaning" prefHeight="374.0" prefWidth="558.0" wrapText="true"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <font>
                  <Font size="14.0"/>
                </font>
              </TextArea>
              <Button fx:id="buttonPlay" layoutX="524.8" layoutY="1.0" mnemonicParsing="false"
                onAction="#handlePlay" prefHeight="26.0" prefWidth="25.0" styleClass="root"
                AnchorPane.bottomAnchor="347.0" AnchorPane.leftAnchor="525.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            </children>
          </AnchorPane>
        </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10">
        <Button fx:id="buttonAdd" disable="true" onAction="#handleAdd" prefHeight="26.0"
          prefWidth="60.0" text="Add"/>
        <Button fx:id="buttonUpdate" disable="true" onAction="#handleUpdate" prefHeight="26.0"
          prefWidth="60.0" text="Update"/>
        <Button fx:id="buttonDelete" disable="true" onAction="#handleDelete" prefHeight="26.0"
          prefWidth="60.0" text="Delete"/>
        <VBox.margin>
          <Insets top="10.0"/>
        </VBox.margin>
      </HBox>
    </children>
  </VBox>
  <styleClass>
    <String fx:value="second-color"/>
    <String fx:value="root"/>
  </styleClass>
</AnchorPane>
