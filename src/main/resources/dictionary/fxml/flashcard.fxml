<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="background"
  stylesheets="@../css/flashcard.css" xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.FlashcardController">
  <HBox layoutX="41.2" layoutY="10.0" prefHeight="40.0" prefWidth="740.0" styleClass="toggle-bar"
    AnchorPane.bottomAnchor="545.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
    AnchorPane.topAnchor="15.0">
    <children>
      <ImageView fitHeight="40.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true">
        <image>
          <Image url="@../media/image/logo_full.png"/>
        </image>
        <HBox.margin>
          <Insets right="20.0"/>
        </HBox.margin>
      </ImageView>
      <Button fx:id="changeWordSceneButton" mnemonicParsing="false" onAction="#handleChangeDicScene"
        prefHeight="40.0" prefWidth="100.0" styleClass="tab" text="Dictionary"
        textAlignment="CENTER">
        <font>
          <Font name="System Bold" size="16.0"/>
        </font>
        <HBox.margin>
          <Insets right="10.0"/>
        </HBox.margin>
      </Button>
      <Button fx:id="changeParaSceneButton" layoutX="137.0" layoutY="10.0" mnemonicParsing="false"
        onAction="#handleChangeTransScene" prefHeight="40.0" prefWidth="100.0" styleClass="tab"
        text="Translate" textAlignment="CENTER">
        <font>
          <Font name="System Bold" size="16.0"/>
        </font>
        <HBox.margin>
          <Insets left="10.0" right="10.0"/>
        </HBox.margin>
      </Button>
      <Button fx:id="changeChallengeSceneButton" layoutX="237.0" layoutY="10.0"
        mnemonicParsing="false" onAction="#handleChangePracScene" prefHeight="40.0"
        prefWidth="100.0" text="Practice" textAlignment="CENTER">
        <font>
          <Font name="System Bold" size="16.0"/>
        </font>
        <HBox.margin>
          <Insets left="10.0" right="10.0"/>
        </HBox.margin>
        <styleClass>
          <String fx:value="tab"/>
          <String fx:value="active"/>
        </styleClass>
      </Button>
    </children>
  </HBox>
  <VBox layoutX="50.0" layoutY="80.0" prefHeight="492.0" prefWidth="640.0" spacing="20.0"
    AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0">
    <children>
      <Label text="Test Name">
        <font>
          <Font name="System Bold" size="30.0"/>
        </font>
      </Label>
      <HBox prefHeight="50.0" prefWidth="640.0" spacing="20.0">
        <children>
          <Button mnemonicParsing="false" onAction="#handleBackButton" prefHeight="50.0"
            prefWidth="160.0" styleClass="button-has-text" text="Back">
            <font>
              <Font name="System Bold" size="18.0"/>
            </font>
          </Button>
          <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditButton"
            prefHeight="50.0" prefWidth="140.0" styleClass="button-has-text" text="Edit"/>
          <Button mnemonicParsing="false" onAction="#handleAddButton" prefHeight="50.0"
            prefWidth="140.0" styleClass="button-has-text" text="Add"/>
          <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButton"
            prefHeight="50.0" prefWidth="140.0" styleClass="button-has-text" text="Delete"/>
        </children>
      </HBox>
      <TextArea fx:id="card" editable="false" onMouseClicked="#handleCardClick" prefHeight="285.0"
        prefWidth="640.0" style="-fx-background-color: white;" styleClass="centered-text-area"
        wrapText="true">
        <font>
          <Font size="24.0"/>
        </font>
      </TextArea>
      <AnchorPane prefHeight="50.0" prefWidth="699.0">
        <children>
          <AnchorPane layoutX="200.0" prefHeight="50.0" prefWidth="50.0" styleClass="anchor-pane">
            <children>
              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true"
                styleClass="image-view-button" AnchorPane.bottomAnchor="12.5"
                AnchorPane.leftAnchor="12.5" AnchorPane.rightAnchor="12.5"
                AnchorPane.topAnchor="12.5">
                <image>
                  <Image url="@../media/image/back.png"/>
                </image>
              </ImageView>
              <Button fx:id="prevButton" mnemonicParsing="false" onAction="#handlePrevButton"
                prefHeight="50.0" prefWidth="50.0" style="-fx-border-radius: 50;"
                styleClass="button-has-icon"/>
            </children>
          </AnchorPane>
          <Label fx:id="indexLabel" layoutX="270.0" prefHeight="50.0" prefWidth="100.0"
            textAlignment="CENTER">
            <font>
              <Font size="20.0"/>
            </font>
          </Label>
          <AnchorPane layoutX="390.0" prefHeight="50.0" prefWidth="51.0" styleClass="anchor-pane">
            <children>
              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true"
                styleClass="image-view-button" AnchorPane.bottomAnchor="12.5"
                AnchorPane.leftAnchor="12.5" AnchorPane.rightAnchor="12.5"
                AnchorPane.topAnchor="12.5">
                <image>
                  <Image url="@../media/image/next.png"/>
                </image>
              </ImageView>
              <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextButton"
                prefHeight="50.0" prefWidth="50.0" style="-fx-border-radius: 50;"
                styleClass="button-has-icon"/>
            </children>
          </AnchorPane>
        </children>
      </AnchorPane>
    </children>
  </VBox>
</AnchorPane>
